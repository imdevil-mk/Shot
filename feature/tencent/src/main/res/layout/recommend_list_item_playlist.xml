<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recommend_playlist_cover"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/for_test" />

    <TextView
        android:id="@+id/recommend_playlist_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@id/recommend_playlist_cover"
        app:layout_constraintStart_toStartOf="@id/recommend_playlist_cover"
        app:layout_constraintTop_toBottomOf="@id/recommend_playlist_cover"
        tools:text="@string/feature_recommend" />
</androidx.constraintlayout.widget.ConstraintLayout>